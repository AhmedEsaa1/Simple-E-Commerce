@model Category



<form class="form-inline" asp-controller="Category" asp-action="Edit" method="post" enctype="multipart/form-data">
  <div class="form-group mb-2">
    <input type="text" asp-for="Name"  placeholder="Category Name" value="@Model.Name">
  </div>

  <div class="form-group mb-2">
    <input type="text" asp-for="Description"  placeholder="Category Description" value="@Model.Description">
  </div>

  <div class="form-group mb-2">
    <input type="hidden" name="Id" value="@Model.Id" />
  </div>

  <button type="submit" class="btn btn-primary mb-2">Edit Category</button>
</form>