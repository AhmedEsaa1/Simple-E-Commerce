@model IEnumerable<Category>

@{
    foreach (var item in Model)
    {
        <h3>Id: @item.Id</h3>
        <h3>Name: @item.Name</h3>
        <h3>Description: @item.Description</h3>

        <a class="btn btn-outline-dark mt-auto" asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id">Delete</a>
        <a class="btn btn-outline-dark mt-auto" asp-action="Edit" asp-controller="Category" asp-route-id="@item.Id">Edit</a>

        <br><hr>

    }
}