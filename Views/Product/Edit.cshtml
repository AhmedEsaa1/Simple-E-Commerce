@model Product

@{
    ViewData["Title"] = "Edit";

}
<br>
<div class="text-center">

    
<form   asp-action="Edit" asp-controller="Product" method="post" enctype="multipart/form-data">

            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

             <div class="form-floating">
                <input asp-for="Name" class="form-control"  aria-required="true" value="@Model.Name" />
                <label asp-for="Name"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br>


            <div class="form-floating">
                <input asp-for="Description" class="form-control"  aria-required="true" value="@Model.Description"/>
                <label asp-for="Description"></label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br>


            <div class="form-floating">
                <input asp-for="Price" class="form-control"  aria-required="true" value="@Model.Price"/>
                <label asp-for="Price"></label>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <br>

            <div class="form-floating">
                <input  asp-for="categoryId" class="form-control"  aria-required="true" value="@Model.categoryId"/>
                <label asp-for="categoryId"></label>
                <span asp-validation-for="categoryId" class="text-danger"></span>
            </div>
            <br>

            <div class="form-floating">
                <input  asp-for="OfferId" class="form-control"  aria-required="true" value="@Model.OfferId" />
                <label asp-for="OfferId"></label>
                <span asp-validation-for="OfferId" class="text-danger"></span>
            </div>
            <br>

             <div class="form-floating">
                <input  asp-for="stockId" class="form-control"  aria-required="true" value="@Model.stockId"/>
                <label asp-for="stockId"></label>
                <span asp-validation-for="stockId" class="text-danger"></span>
            </div>
            <br>

             <img  src="data:image;base64,@System.Convert.ToBase64String(@Model.Photo)" alt="Photo" width="200" height="250" />

            <div class="form-floating">

                <input  asp-for="Photo" class="form-control"  aria-required="true" type="file"  />
                <label asp-for="Photo">Edit Photo</label>
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
            <br>

            <div>
                <input type="hidden" name="Id" value="@Model.Id" />
            </div>

                     

            <button type="submit" class="btn btn-primary d-block mt-4">Add</button>
        </form>

   </div>
   

