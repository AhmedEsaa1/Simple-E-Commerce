@model OfferDto

<form class="form-inline" asp-controller="Offer" asp-action="Create" method="post" enctype="multipart/form-data">
  <div class="form-group mb-2">
    <input type="text" asp-for="Name"  placeholder="Offer Name">
  </div>

  <div class="form-group mb-2">
    <input type="text" asp-for="Description"  placeholder="Offer Description">
  </div>

  <div class="form-group mb-2">
    <label>Offer Percent</label>
    <input type="number" min="0" max="100" asp-for="Offer_percent" placeholder="%" >
  </div>

  <div class="form-group mb-2">
    <label>Activate offer</label>
    <input type="checkbox" asp-for="Active">
  </div>

  <button type="submit" class="btn btn-primary mb-2">Create Offer</button>
</form>
