@model Offer

<form class="form-inline" asp-controller="Offer" asp-action="Edit" method="post" enctype="multipart/form-data">
  <div class="form-group mb-2">
    <input type="text" asp-for="Name" value="@Model.Name" >
  </div>

  <div class="form-group mb-2">
    <input type="text" asp-for="Description" value="@Model.Description" >
  </div>

  <div class="form-group mb-2">
    <input type="number" min="0" max="100" asp-for="Offer_percent" value="@Model.Offer_percent" >
  </div>

  <div class="form-group mb-2">
    <input type="checkbox" asp-for="Active" value="@Model.Active" >
  </div>

  <div class="form-group mb-2">
       <input type="hidden" name="Id" value="@Model.Id" />
  </div>

  <button type="submit" class="btn btn-primary mb-2">Edit Stock</button>
</form>